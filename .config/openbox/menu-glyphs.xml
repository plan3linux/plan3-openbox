<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/  file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" title="Menu" label="Openbox 3">
<!--	<separator label="Main Menu"/>  -->
		<item label=" Terminal Emulator">
			<action name="Execute">
				<command>alacritty</command>
			</action>
		</item>
		<item label=" File Manager">
			<action name="Execute">
				<command>thunar</command>
			</action>
		</item>
		<item label=" Web Browser">
			<action name="Execute">
				<command>firefox</command>
			</action>
		</item>
		<item label=" Text Editor">
			<action name="Execute">
				<command>geany</command>
			</action>
		</item>
		<separator/>
		<menu id="preferences" label=" Preferences">
			<menu id="obconfig" label="Openbox">
				<item label="Settings">
					<action name="Execute">
						<command>obconf</command>
					</action>
				</item>
				<separator/>
				<item label="Edit menu.xml">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/menu-glyphs.xml</command>
					</action>
				</item>
				<item label="Edit rc.xml">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/rc.xml</command>
				</item>
				<item label="Edit autostart">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/autostart</command>
					</action>
				</item>
				<separator/>
				<item label="Reconfigure">
					<action name="Reconfigure"/>
				</item>
				<item label="Restart">
					<action name="Restart"/>
				</item>
			</menu>
			<separator/>
			<item label="Change Wallpaper">
				<action name="Execute">
					<command>nitrogen</command>
				</action>
			</item>
			<item label="Appearance Settings">
				<action name="Execute">
					<command>xfce4-appearance-settings</command>
				</action>
			</item>
			<item label="QT5 Settings">
				<action name="Execute">
					<command>qt5ct</command>
				</action>
			</item>
			<item label="Kvantum Manager">
				<action name="Execute">
					<command>kvantummanager</command>
				</action>
			</item>
			<separator/>
			<item label="Power Settings">
				<action name="Execute">
					<command>xfce4-power-manager-settings</command>
				</action>
			</item>
			<item label="Settings Manager">
				<action name="Execute">
					<command>xfce4-settings-manager</command>
				</action>
			</item>
		</menu>
		<item label=" Lock Screen">
			<action name="Execute">
				<command>betterlockscreen --lock</command>
			</action>
		</item>
	</menu>
      	<item label=" Logout">
	  <action name="Execute">
      	      	<command>archlinux-logout</command>
      	  </action>
	</item>
</openbox_menu>
